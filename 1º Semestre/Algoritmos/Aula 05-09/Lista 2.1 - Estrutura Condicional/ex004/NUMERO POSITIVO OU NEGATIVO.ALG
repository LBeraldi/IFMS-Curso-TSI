Algoritmo "Numero positivo ou negativo"
Var
numero : real
Inicio
escreval ("Escreva um número !!")
   leia(numero)
   
   se (numero = 0) entao
    escreval("O número", numero," é nulo")
   fimse
   
   se (numero < 0) entao
    escreval("O número", numero," É negativo")
   fimse
   
   se (numero > 0) entao
    escreval("O numero", numero," é positivo")
   fimse
   
Fimalgoritmo